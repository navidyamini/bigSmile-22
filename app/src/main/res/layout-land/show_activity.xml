<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"

    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageLayout"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageLayout"
        android:layout_toRightOf="@+id/imageLayout"
        android:divider="@android:color/transparent"
        android:dividerHeight="14dp" />

    <RelativeLayout
        android:id="@+id/waitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageLayout"
        android:layout_toRightOf="@+id/imageLayout"
        android:background="#b30097a7"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/waitProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/waitMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/waitProgress"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/fetching_data"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:background="@drawable/books"
            android:scaleType="centerCrop"
            android:src="@drawable/books" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/confirmBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_camera_white_24dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/confirmBook"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_show"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_toLeftOf="@+id/list_profile"
        android:layout_toStartOf="@+id/list_profile"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleMarginStart="30dp">

    </android.support.v7.widget.Toolbar>

</RelativeLayout>