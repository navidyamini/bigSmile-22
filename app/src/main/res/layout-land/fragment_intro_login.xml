<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#609e9e9e"
            android:visibility="gone">

            <EditText
                android:id="@+id/username"
                style="@style/introStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_account_circle_white_24dp"
                android:drawablePadding="6dp"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="#E0E0E0"
                android:textSize="16sp"
                android:theme="@style/introStyle" />

            <EditText
                android:id="@+id/password"
                style="@style/introStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/username"
                android:layout_alignLeft="@+id/username"
                android:layout_alignRight="@+id/username"
                android:layout_alignStart="@+id/username"
                android:layout_below="@+id/username"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                android:drawablePadding="6dp"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#E0E0E0"
                android:textSize="16sp"
                android:theme="@style/introStyle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/explain_log"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:clipToPadding="false"
            android:padding="10dp">


            <Button
                android:id="@+id/EmailAccessBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/PhoneAccessBtn"
                android:layout_alignLeft="@+id/PhoneAccessBtn"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/PhoneAccessBtn"
                android:layout_alignStart="@+id/PhoneAccessBtn"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#B71C1C"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="10dp"
                android:elevation="2dp"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:text="@string/signin_email" />

            <Button
                android:id="@+id/PhoneAccessBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmailAccessBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#009688"
                android:drawableLeft="@drawable/ic_phone_white_24dp"
                android:drawablePadding="10dp"
                android:elevation="2dp"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:text="@string/by_telephone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signupLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/noAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:fontFamily="@font/roboto_light"
                android:text="@string/no_account"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/noAccountText"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/noAccountText"
                android:layout_toRightOf="@+id/noAccountText"
                android:fontFamily="@font/roboto_light"
                android:text="@string/free_signup"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/accessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/formLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#1565C0"
            android:drawableLeft="@drawable/ic_check_circle_white_24dp"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_light"
            android:padding="10dp"
            android:text="@string/access"
            android:visibility="gone" />

        <TextView
            android:id="@+id/explain_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accessButton"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Effettua il login per iniziare a condivdere i tuoi libri, visualizzare le proposte offerte da altri utenti e iniziare lo scambio"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>