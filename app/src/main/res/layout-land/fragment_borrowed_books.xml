<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_edit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Borrowed books"
        app:titleMarginStart="30dp">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_search_black_24dp"
        android:elevation="0dp" />


    <ImageView
        android:id="@+id/sfondoBorrowed"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar_edit"
        android:background="#33691E"
        app:srcCompat="@drawable/book" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Book1"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="53dp"
                android:layout_toLeftOf="@+id/Deadline1"
                android:layout_toStartOf="@+id/Deadline1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Title"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/Deadline1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Book1"
                android:layout_alignBottom="@+id/Book1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="date"
                android:text="Deadline"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="137dp"
                android:text="“Never trust anyone who has not brought a book with them.”  ― Lemony Snicket, Horseradish"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/AddBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:background="@drawable/simple_circle"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="25dp" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>