<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/name_edit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/city_edit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bio_edit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_city"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/image"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/bio_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/city_edit"
                android:layout_alignStart="@+id/city_edit"
                android:layout_below="@+id/phone_edit"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_ShortBio"
                android:inputType="none" />

            <EditText
                android:id="@+id/zip_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/city_edit"
                android:layout_alignBottom="@+id/city_edit"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/city_edit"
                android:layout_toRightOf="@+id/city_edit"
                android:ems="10"
                android:hint="@string/user_zipCode"
                android:inputType="text" />

            <EditText
                android:id="@+id/zone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/city_edit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_zone"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email_edit"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/user_PhoneNumber"
                android:inputType="phone" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>