<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>


    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorEntryList</item>
        <item name="android:colorForeground">@color/textColorEntryList</item>
        <item name="textColorAlertDialogListItem">@color/textColorEntryList</item>


    </style>

    <style name="introStyle" parent="AppTheme">

        <item name="colorAccent">#EEEEEE</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">#EEEEEE</item>




    </style>

    <style name="mailStyle" parent="AppTheme">

        <item name="colorAccent">#B71C1C</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">#EEEEEE</item>

    </style>


    <style name="phoneStyle" parent="AppTheme">

        <item name="colorAccent">#009688</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="android:textColorSecondary">#EEEEEE</item>

    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorEntryList</item>
        <item name="android:colorForeground">@color/textColorEntryList</item>
        <item name="textColorAlertDialogListItem">@color/textColorEntryList</item>
    </style>



</resources>
